// Place your key bindings in this file to overwrite the defaults
[
    // Terminal focus toggle: https://stackoverflow.com/a/43012779/6215238
    { "key": "cmd+Escape", "command": "workbench.action.terminal.focus"},
    {
        "key": "cmd+Escape",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },

    {
        "key": "alt+cmd+1",
        "command": "workbench.action.editorLayoutSingle"
    },
    {
        "key": "ctrl+shift+right",
        "command": "workbench.action.moveEditorToNextGroup"
    },
    {
        "key": "ctrl+cmd+right",
        "command": "-workbench.action.moveEditorToNextGroup"
    },
    {
        "key": "ctrl+shift+left",
        "command": "workbench.action.moveEditorToPreviousGroup"
    },
    {
        "key": "ctrl+cmd+left",
        "command": "-workbench.action.moveEditorToPreviousGroup"
    },
    {
        "key": "ctrl+alt+right",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "alt+cmd+right",
        "command": "-workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+cmd+left",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "alt+cmd+left",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+cmd+left",
        "command": "-workbench.action.terminal.resizePaneLeft",
        "when": "terminalFocus"
    },
    {
        "key": "alt+tab",
        "command": "workbench.action.navigateEditorGroups"
    },
    {
        "key": "ctrl+shift+cmd+r",
        "command": "editor.action.rename",
        "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },
    {
        "key": "f2",
        "command": "-editor.action.rename",
        "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+cmd+e",
        "command": "editor.action.goToReferences",
        "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
        "key": "shift+f12",
        "command": "-editor.action.goToReferences",
        "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    {
        "key": "ctrl+enter",
        "command": "sqltools.executeCurrentQuery",
        "when": "resourceLangId == 'sql'"
    },
    {
        "key": "ctrl+shift+cmd+d",
        "command": "editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "f12",
        "command": "-editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "ctrl+shift+cmd+t",
        "command": "editor.action.goToTypeDefinition"
    },
    {
        "key": "ctrl+shift+i",
        "command": "insertDateString.insertDate"
    },
    {
        "key": "ctrl+shift+o",
        "command": "gitlens.copyRemoteFileUrlToClipboard"
    },
]
